<script>
	/** 
* 从 file 域获取 本地图片 url 
*/ 
function getFileUrl(sourceId) { 
var url; 
if (navigator.userAgent.indexOf("MSIE")>=1) { // IE 
url = document.getElementById(sourceId).value; 
} else if(navigator.userAgent.indexOf("Firefox")>0) { // Firefox 
url = window.URL.createObjectURL(document.getElementById(sourceId).files.item(0)); 
} else if(navigator.userAgent.indexOf("Chrome")>0) { // Chrome 
url = window.URL.createObjectURL(document.getElementById(sourceId).files.item(0)); 
} 
return url; 
} 
/** 
* 将本地图片 显示到浏览器上 
*/ 
function preImged(sourceId, targetId) { 
var url = getFileUrl(sourceId); 
var imgPre = document.getElementById(targetId); 
if(url){
imgPre.style.background ='url('+url+')'; 
imgPre.style.backgroundSize = '100% 100%';
}else{
imgPre.style.background ='#dbdbdb'; 
}
}
function close_wind(){
$$('mengban').className='ul_display_none';
$$('window_open').className='ul_display_none';
}
function menu_pz(id){
$$('mengban').className='mengban';
$$('window_open').className='window_opens';
if(id==0){
		
		$$('win_con0').className= '';
		$$('win_con1').className= 'ul_display_none';
		
	}else if(id==1){

		$$('win_con0').className= 'ul_display_none';
		$$('win_con1').className= '';
	}
}
function fill_choose(id,ids,ided,ides){
	$$(id).className='read_input ul_margin_top ul_hidden';
	$$(ids).className='ul_display_none';
	$$(ided).className='ul_float_left tianxuan ul_margin_right ul_margin_left';
	$$(ides).className='ul_float_left tianxuaned ul_margin_right ul_margin_left';
}
function choose_fill(id,ids,ided,ides){
	$$(id).className='ul_display_none';
