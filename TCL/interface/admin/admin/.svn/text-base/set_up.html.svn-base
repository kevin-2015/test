<script>
 window.onload = function(e){
// now_page();
//
//	height_weight();
}

var zcs_con_length= $$('zcs_con').children.length;
var canshu_bili_now= 0;
function canshu_bili(id){
if(id==2){
$$('canshu_bili1').className='chicun_menu ul_float_left';
canshu_bili_now=1;
}else{
	if(canshu_bili_now== id){
		$$('canshu_bili'+id).className='chicun_menu ul_float_left';
	}else{
		$$('canshu_bili'+id).className='chicun_menu ul_float_left';
		$$('canshu_bili'+canshu_bili_now).className='bili_menu ul_float_left';
	}
	canshu_bili_now =id;
	}
	for(var i =0;i < zcs_con_length;i++){
	     if(id == i){
		 	$$('zcs_con'+id).className= '';
		 }else{
		 	$$('zcs_con'+i).className= 'ul_display_none'
		 }
	 }
	
}

function Modify(id){
		$$(id).className='span';
		$$(id+'_input').className='inputstyle';
		$$(id+'_input').readOnly = false;
		$$(id+'_upload').className='ul_display_none';
		$$(id+'_save').className='inpit_font ul_float_left ul_margin_left';
}
function Save(id){
		$$(id).className='zhangfs';
		$$(id+'_input').className='input_mi';
		$$(id+'_input').readOnly = true;
		$$(id+'_upload').className='inpit_font ul_float_left ul_margin_left';
		$$(id+'_save').className='ul_display_none';
}
</script>
