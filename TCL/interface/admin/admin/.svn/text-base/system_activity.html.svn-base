$$('window_open').className='window_opens';
}
function fill_choose(id,ids){
	$$(id).className='read_input ul_margin_top ul_hidden';
	$$(ids).className='ul_display_none';
	$$('files_7').className='ul_float_left tianxuan ul_margin_right ul_margin_left';
	$$('choose_7').className='ul_float_left tianxuaned ul_margin_right ul_margin_left';
}
function choose_fill(id,ids){
	$$(id).className='ul_display_none';
	$$(ids).className='read_input ul_margin_top ul_hidden';
	$$('files_7').className='ul_float_left tianxuaned ul_margin_right ul_margin_left';
	$$('choose_7').className='ul_float_left tianxuan ul_margin_right ul_margin_left';
}
</script>
