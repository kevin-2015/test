  color: #000;
  text-align: center;
}

.calendar thead .headrow { /* Row <TR> containing navigation buttons */
background: #d0d0d0;
}

.calendar thead .daynames { /* Row <TR> containing the day names */
}

.calendar thead .name { /* Cells <TD> containing the day names */
 /* border-bottom: 1px solid #000;*/
  padding: 2px;
  text-align: center;
  background: #fde0b6;
  /*background:white;*/
