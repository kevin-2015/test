<script>
	//图片滑动
	function scroll_pic(){
		var pornter = $$("point");
		var note = pornter.children;
		//var title=$$("img_title").children;
		flip1 = new zySlide("wraper", "H", function(){
			var cp = flip1.currentPoint;
			for (var i in note) {
				note[i].className = "p_crl p_auto";
			//title[i].className= "uhide";
			}
			note[cp].className = "p_crl p_act";
		// title[cp].className= "";
		});
		fliptimer();
		fliptm = setInterval('fliptimer();', 3000);
	}
function fliptimer(){
			if (flip1) {
				var f = flip1;
				var mp = f.maxPoint;
				var tp = f.currentPoint + 1;
				if (tp > mp) 
					tp = 0;
				f.moveToPoint(tp);
				var pornter = $$("point");
				var note = pornter.children;
				//var title=$$("img_title").children;
				for (var i in note) {
					note[i].className = "p_crl p_auto";
				//title[i].className= "uhide";
				}
				note[tp].className = "p_crl p_act";
			//title[tp].className= "";
			//fliptm = setTimeout('fliptimer();',3000);
			}
		}
